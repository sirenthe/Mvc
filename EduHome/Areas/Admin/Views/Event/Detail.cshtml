@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using EduHome.Areas.Admin.ViewModels.EventViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model DetailEventViewModel

<div class="content-wrapper">
    <div class="row">
        <div>
            <img src="~/assets/img/event/@Model.Image" style="width:20%" />

            <h4>Title:@Model.Description</h4>
            <h4>Rating:@Model.Name</h4>
            <h4>Assestments:@Model.Date</h4>
            <h4>About :@Model.Time</h4>
          


            <h4>Speakers:</h4>
            <ul>
                @foreach (var category in Model.Speakers)
                {
                    <li>@category.Name</li>
                }
            </ul>


            <h4>Description:@Model.Venue</h4>
        </div>
        <div>
            <a class="btn btn-primary " asp-action="Index">go back </a>
        </div>
    </div>
</div>


