
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using EduHome.Areas.Admin.ViewModels.CourseViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model DetailCourseViewModel

<div class="content-wrapper">
<div class="row">
    <div>
        <img src="~/assets/img/course/@Model.Image" style="width:20%" />

        <h4>Title:@Model.Fee</h4>
        <h4>Rating:@Model.Name</h4>
        <h4>Assestments:@Model.Assestments</h4>
        <h4>About :@Model.About</h4>
         <h4>Language:@Model.Language</h4>
        <h4>Duration:@Model.Duration</h4>
        <h4>ClassDuration:@Model.ClassDuration</h4>
        <h4>SkillLevel:@Model.SkillLevel</h4>
        <h4>StartDate:@Model.StartDate</h4>
         <h4>Students:@Model.Students</h4>
        <h4>CreatedBy:@Model.CreatedBy</h4>
        <h4>Updatedby:@Model.UpdatedBy</h4>
        <h4>updatedate:@Model.UpdatedDate</h4>
        <h4>createdate:@Model.CreatedDate</h4>


            <h4>Categories:</h4>
            <ul>
                @foreach (var category in Model.Categories)
                {
                    <li>@category.Name</li>
                }
            </ul>

    
        <h4>Description:@Model.Description</h4>
    </div>
    <div>
        <a class="btn btn-primary " asp-action="Index">go back </a>
    </div>
</div>
</div>