@using EduHome.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
	ViewData["Title"] = "Sliders";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model List<Skill>
<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Skills</h4>

                    <div class="table-responsive">


                        <a asp-action="Create" class="btn btn-primary">Create</a>

                        <table class="table">
                            <thead>
                                <tr>
                                 

                                    <th>Name</th>
                                
                                    <th>Percent</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var skill in Model)
                                {
                                    <tr>
                                      

                                        <td>@skill.Name</td>


                                      
                                        <td>
                                            <a class="btn btn-primary" asp-action="Detail" asp-route-id="@skill.Id"> Detail </a>

                                        </td>

                                  @*      <td>
                                            <a class="btn btn-primary" asp-action="Update" asp-route-id="@skill.Id"> Update </a>

                                        </td>*@
                                     

                                        <td>
                                            <a class="btn btn-danger " asp-action="Delete" asp-route-id="@skill.Id"> Delete </a>
                                        </td>
                                    </tr>

                                }



                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


