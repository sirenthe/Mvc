@using EduHome.Models
@using EduHome.Areas.Admin.ViewModels.CategoryViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
	ViewData["Title"] = "Create";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model CreateCategoryViewModel
<div class="card">
	<div class="card-body">
		<h4 class="card-title">Category</h4>

		<form class="forms-sample" method="post" enctype="multipart/form-data">



			<div class="form-group">
				<label for="exampleInputUsername1">Name</label>
				<input class="form-control" asp-for="Name" placeholder=" Name">
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			




			<button asp-action="Create" class="btn btn-primary mr-2">Create</button>

		</form>
	</div>
</div>



