@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using EduHome.Identity;
@model IEnumerable<AppUser>
<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Users</h4>

                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>UserName</th>
                                    <th>Email</th>
                                    <th>Role</th>
                                    <th>Actions</th>
                                    <th>IsActive</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (AppUser user in Model)
                                {
                                    <tr>
                                        <td>@user.UserName</td>
                                        <td>@user.Email</td>
                                        
                                        <td>Is Active: @(user.IsActive? "Yes" : "No")</td>
                                        <td>
                                            <a class="btn btn-primary" asp-action="ChangeRole" asp-route-id="@user.Id">ChangeRole</a>
                                        </td>
                                        @if (user.IsActive)
                                        {
                                            <td> <a class="btn btn-warning" asp-action="ChangeStatus" asp-route-id="@user.Id">Deactivate</a></td>
                                        }
                                        else
                                        {
                                            <td><a class="btn btn-success" asp-action="ChangeStatus" asp-route-id="@user.Id">Activate</a></td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
