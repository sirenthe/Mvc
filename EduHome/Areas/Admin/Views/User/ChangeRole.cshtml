@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers  
@{
    ViewData["Title"] = "ChangeRole";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using EduHome.Areas.Admin.ViewModels;
@using EduHome.Identity
@model RoleChangeViewModel

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Change User Role  

                     
                    </h4>
                   <h5>Current role:   @foreach (var item in Model.Roles)
                        {
                            @item
                        }</h5>
                    <form method="post" asp-action="UpdateRole" asp-route-id="@Model.USer.Id">
                          
                        <div class="form-group">
                            <label for="newRole">New Role</label>
                            <select class="form-control" id="newRole" name="newRole">
                                @foreach (var role in ViewBag.Roles)
                                {
                                    <option value="@role">@role</option>
                                }
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Update Role</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

