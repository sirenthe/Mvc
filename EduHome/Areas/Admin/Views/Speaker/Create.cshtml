@using EduHome.Models
@using EduHome.Areas.Admin.ViewModels.SpeakerViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
	ViewData["Title"] = "Create";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model CreateSpeakerViewModel
<div class="card">
	<div class="card-body">
		<h4 class="card-title">Speaker</h4>

		<form class="forms-sample" method="post" enctype="multipart/form-data">
			<div class="form-group">
				<label for="exampleInputUsername1">Image</label>
				<input class="form-control" asp-for="Image" placeholder="Img" accept="image/*">
				<span asp-validation-for="Image" class="text-danger"></span>
			</div>
		
	
			<div class="form-group">
				<label for="exampleInputUsername1">Occupation</label>
				<input class="form-control" asp-for="Occupation" placeholder=" Occupation">
				<span asp-validation-for="Occupation" class="text-danger"></span>
			</div>

		
			<div class="form-group">
				<label for="exampleInputUsername1">Name</label>
				<input class="form-control" asp-for="Name" placeholder="Name">
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			

			<button asp-action="Create" class="btn btn-primary mr-2">Create</button>

		</form>
	</div>
</div>

